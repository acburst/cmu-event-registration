%h1 Listing events

%table
  %tr
    %th Date
    %th Name
    %th Description
    %th Capacity
    %th Organization
    %th
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.date
      %td= event.name
      %td= event.description
      %td= event.capacity
      %td= event.organization
      %td= link_to 'Show', event
      %td= link_to 'Edit', edit_event_path(event)
      %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

